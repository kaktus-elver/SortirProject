{% extends 'layout.html.twig' %}

{% block main %}
    <h2>Sortie : {{ sortie.nom }}</h2>
    <br>
    <div>{{ sortie.dateHeureDebut | date ('d/m/Y H:i') }}</div>
    <div>{{ sortie.dateLimiteInscription | date('d/m/Y') }}</div>
    <div>{{ sortie.nbInscriptionsMax }}</div>
    <div>{{ sortie.duree | date('H:i') }}</div>
    <div>{{ sortie.infosSortie }}</div>
    <div>{{ sortie.campus.nom }}</div>
    <div>{{ sortie.lieu.nom }}</div>

    <br>
    <h2>Liste des participants inscrits</h2>
    <div class="col-lg-6 col-md-6 col-sm-6">
        <table class="table table-dark ">
            <thead>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Nom</th>

            </tr>
            </thead>
            <tbody>
            {% for participant in sortie.participants %}
                <tr>
                    <th scope="row">{{ sortie.participant }}</th>

                    <td>{{ sortie.participant.pseudo }}</td>
                    <td>{{ sortie.participant.nom }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}

