{% extends 'layout.html.twig' %}

{% block main %}

    <h2 class="sortieTitle">Annuler une Sortie</h2>
    <br>
    <div class="grid">

            <div class="annulerSortie">
                <div>
                    <label for="nomSortie">Nom de la sortie : </label>
                    <input type="text" id="dateDebut" value="{{ sortie.nom }}" readonly>
                </div>

                <div>
                    <label for="dateDebut">Date de la sortie : </label>
                    <input type="text" id="dateDebut" value="{{ sortie.dateHeureDebut | date ('d/m/Y') }}" readonly>
                </div>

                <div>
                    <label for="campus">Campus : </label>
                    <input type="text" id="campus" value="{{ sortie.campus.nom }}" readonly>
                </div>
                <div>
                    <label for="lieu">Lieu : </label>
                    <input type="text" id="lieu" value="{{ sortie.lieu.nom }}" readonly>
                </div>
     <form action="" method="post">
                <div>
                    <label for="motif">Motif : </label>
                    <textarea id="motif" rows="5" cols="19"></textarea>

                </div>
     </form>
            </div>

    </div>
{% endblock %}

{% block title %}Annuler une sortie ! | {{ parent() }}{% endblock %}