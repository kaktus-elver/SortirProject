{% extends 'layout.html.twig' %}

{% block main %}
    <h1>{{ participant.username }}</h1>

    <div>
        <div>
            <label for="prenom">Prenom : </label>
            <input type="text" id="prenom" value="{{ participant.prenom }}" readonly>
        </div>
        <div>
            <label for="nom">Nom : </label>
            <input type="text" id="nom" value="{{ participant.nom }}" readonly>
        </div>
        <div>
            <label for="telephone">Telephone : </label>
            <input type="text" id="telephone" value="{{ participant.telephone }}" readonly>
        </div>
        <div>
            <label for="email">Email : </label>
            <input type="text" id="email" value="{{ participant.mail }}" readonly>
        </div>
        <div>
            <label for="campus">Campus : </label>
            <input type="text" id="campus" value="{{ participant.campus.nom }}" readonly>
        </div>
    </div>
{% endblock %}

{% block title %}modifier Profil{% endblock %}